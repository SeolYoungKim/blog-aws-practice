{{>layout/header}}

<h1>게시글 번호 : {{post.id}}</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">게시글 번호</label>
                <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{post.title}}">
            </div>
            <div>
                <select class="form-select" aria-label="카테고리">
                    {{^post.category}}
                    <option selected>카테고리를 선택하세요.</option>
                    {{/post.category}}
                    {{#categoryList}}
                    <option value="{{name}}">카테고리 이름</option>
                    {{/categoryList}}
                    {{#post.category}}
                    <option selected value="{{post.category.name}}"></option>
                    {{/post.category}}
                </select>
            </div>
            <div class="form-group">
                <label for="author">저자</label>
                <input type="text" class="form-control" id="author" value="{{post.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <input type="text" class="form-control" id="content" value="{{post.content}}">
            </div>
        </form>
        <a href="/posts?page=1&size=5" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update-post">수정 완료</button>
    </div>
</div>

{{>layout/footer}}