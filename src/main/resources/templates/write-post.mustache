{{>layout/header}}
<h1>글 작성하기</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요.">
            </div>

            <!--TODO: 카테고리를 추가하고 돌아왔을 때, 작성중이던 데이터가 온전해야 한다.-->
            <div>
                <select class="form-select form-select-sm" aria-label="카테고리">
                    <option selected>카테고리를 선택하세요.</option>
                {{#categoryList}}
                    <option value="category">{{name}}</option>
                {{/categoryList}}
                </select>
            </div>

            <div class="form-group">
                <label for="author">저자</label>
                <input type="text" class="form-control" id="author" placeholder="저자를 입력하세요.">
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <input type="text" class="form-control" id="content" placeholder="내용을 입력하세요.">
            </div>
        </form>
        <a href="/posts?page=1&size=5" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-save-post">저장</button>
    </div>
</div>


{{>layout/footer}}