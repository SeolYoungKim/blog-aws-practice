{{>layout/header}}

<h1>카테고리 번호 : {{category.id}}</h1>

<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/categories" role="button" class="btn btn-primary">카테고리 목록</a>
            <a href="/category/{{category.id}}/edit" role="button" class="btn btn-primary">카테고리 수정</a>
            <button type="button" class="btn btn-danger" id="btn-delete-category">카테고리 삭제</button>
        </div>
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-4">
        <div class="form-group">
            <label for="id">카테고리 번호</label>
            <input type="text" class="form-control" id="id" value="{{category.id}}" readonly>
        </div>
        <div class="form-group">
            <label for="category">카테고리 이름</label>
            <input type="text" class="form-control" id="category" value="{{category.name}}" readonly>
        </div>
    </div>
</div>

{{>layout/footer}}